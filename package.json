{
    "name": "back",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "dev": "nodemon src/app.ts",
        "build": "tsc",
        "start": "node dist/app.js",
        "typeorm": "typeorm",
        "migration:generate": "typeorm migration:generate -d ./src/data-source.ts",
        "migration:run": "typeorm migration:run -d ./src/data-source.ts",
        "docker:build": "docker-compose build",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:logs": "docker-compose logs -f",
        "prod:setup": "yarn docker:build && yarn docker:up",
        "prod:stop": "yarn docker:down",
        "prod:restart": "yarn docker:down && yarn docker:up",
        "prod:logs": "yarn docker:logs",
        "docker:migration:run": "docker-compose exec backend yarn migration:run",
        "deploy": "git pull && yarn prod:setup && yarn docker:migration:run"
    },
    "dependencies": {
        "cors": "2.8.5",
        "dotenv": "16.3.1",
        "express": "4.18.2",
        "mysql2": "3.6.5",
        "reflect-metadata": "0.1.13",
        "slugify": "1.6.6",
        "typeorm": "0.3.17"
    },
    "devDependencies": {
        "@types/cors": "2.8.13",
        "@types/express": "4.17.17",
        "@types/node": "20.5.7",
        "nodemon": "2.0.22",
        "ts-node-dev": "2.0.0",
        "typescript": "5.2.2"
    },
    "packageManager": "yarn@1.22.22+sha1.ac34549e6aa8e7ead463a7407e1c7390f61a6610"
}
